<div class="container clearfix" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
    <!-- 用户中心 左侧导航 -->
    #parse("/common/user_center_left.vm")

    <!-- 用户中心 右侧部分 -->

    <div class="sidebar_content">
        <h1 class="title">个人信息</h1>

        <div class="user_personal_information_container">
            <form action="/user/update" method="post">

                <input id="hidden_avatar" type="hidden" value="$!user.imageUrl">

                <h2 class="sub_title">基本信息</h2>

                <div class="col_2_container">
                    <div class="col">
                        <h3 class="personal_information_label">昵称</h3>
                        <input type="text" name="userName" value="$!user.userName"/>
                    </div>
                    <div class="col">
                        <h3 class="personal_information_label">性别</h3>
                        #foreach($sex in $sexEnums)
                            <input type="radio" name="sex"
                                   value="$sex.getType()"  #if($!user.sex == $sex.getType())
                                   checked="checked" #end  />
                            <label>$sex.getDescription()</label>
                        #end
                    </div>
                    <div class="col">
                        <h3 class="personal_information_label">最高学历</h3>
                        <select style="width: 270px" value="编剧" name="qualification">
                            #if( !$!userAttach.qualification ||  $!userAttach.qualification == 0)
                                <option value="0">请选择学历</option>
                            #end
                            #foreach($qualification in $qualifications)
                                <option value="$qualification.getType()"
                                    #if($!userAttach.qualification == $qualification.getType())
                                        selected
                                    #end
                                        >$qualification.getDescription()</option>
                            #end
                        </select>
                    </div>
                    <div class="col">
                        <h3 class="personal_information_label">专业</h3>
                        <input type="text" value="$!userAttach.major" name="major" placeholder="待填写"/>
                    </div>
                </div>
                <h3 class="personal_information_label" style="padding-top: 5px">联系邮箱</h3>
                <input style="width: 590px;" type="text" name="email" value="$!user.email" placeholder="待填写">

                <h3 class="personal_information_label" style="padding-top: 5px">一句话介绍自己</h3>
                <textarea style="width: 590px;height: 80px"  name="info">$!user.info</textarea>

                <h2 class="sub_title" style="margin-top: 60px;">职业信息</h2>

                <div class="col_2_container">
                    <div class="col">
                        <h3 class="personal_information_label">职业</h3>
                        <input type="text" value="$!userAttach.work" placeholder="待填写" name="work"/>
                    </div>
                    <div class="col">
                        <h3 class="personal_information_label">公司</h3>
                        <input type="text" value="$!userAttach.company" placeholder="待填写" name="company"/>
                    </div>
                </div>

                <input type="submit" style="margin-top: 93px;" value="保存"/>
            </form>
        </div>
    </div>

</div>