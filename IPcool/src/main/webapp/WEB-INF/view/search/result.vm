    <section class="search_sizer" id="sizer_search">
        <div class="main_sizer_container">
            <h6 class="type_title">文学类型</h6>

            <div class="type_check_container">
                <div class="input_content">
                    <input type="checkbox"
                        #if($!types.contains(1))
                           checked
                        #end
                           name="type" value="1">
                    <label>出版文学</label>
                </div>
                <div class="input_content">
                    <input type="checkbox" name="type"
                        #if($!types.contains(2))
                           checked
                        #end
                           value="2">
                    <label>网络文学</label>
                </div>
            </div>
        </div>
    ##      细节筛选
        <div class="sub_sizer_container">
            <h6 class="type_title">文学类型</h6>
            <div class="type_check_container">
                <div class="input_content">
                    <input type="checkbox" name="">
                    <label>暂未开放</label>
                </div>
            </div>
        </div>
        <div class="infos_container clearfix">
            <h6 class="search_count">为您展示$!{page.totalNum}条结果</h6>
            <button class="toggle_sub_sizer"><span class="arrow"></span></button>
        </div>
    </section>


    <section class="search_result">

        <div class="hidden" id="search-attach">

            <input type="hidden" name="status" value="1">
            <input type="hidden" name="type" value="8">

        </div>

        #if($list)

            #foreach($view in $list)
                <div class="sresult_ip clearfix">
                    <a class="sresult_ip_img_cointainer" href="/index/detail.html?ip=${view.id}"><img
                            src="$!{view.imageUrl}"></a>

                    <div class="sresult_content">
                        <h2><a href="/index/detail.html?ip=${view.id}">$!{view.name} </a>
                            <span class="type">
                                #foreach($bookType in $typeEnums)
                               #if($bookType.getType() == $view.getType())
                                    $bookType.getDescription()
                                #end
                            #end
                            </span>
                        </h2>

                        <h6>作者: $!{view.author}</h6>
                        <ul class="quotient">
                            <li>
                                <h6>开发潜力</h6>
                                <span>$!{view.developIndex}</span>
                            </li>
                            <li>
                                <h6>传播指数</h6>
                                <span>$!{view.propagateIndex}</span>
                            </li>
                            <li>
                                <h6>热度指数</h6>
                                <span>$!{view.hotIndex}</span>
                            </li>
                            <li>
                                <h6>受众口碑</h6>
                                <span>$!{view.reputationIndex}</span>
                            </li>
                        </ul>
                    </div>
                    <div class="overall">
                        <h6>
                            #foreach($bookType in $typeEnums)
                                #if($bookType.getType() == $view.getType())
                                    $bookType.getDescription()排名
                                #end
                            #end</h6>
                        <span>$!rankMap.get($view.getBookId())</span>
                    </div>
                </div>
            #end
        #else
            <div class="sresult_none clearfix">
                <h5>"<span class="name">$!{content}</span>"可能不具备分析价值或暂未被收录</h5>
                <h6>您可以:</h6>
                <a href="/apply">
                    <button>提交收录申请</button>
                </a>

            </div>
        #end
        <!--分页器 -->
        <div class="paging" id="paging"
             data-page-attach='{"totalNum":$!page.totalNum,"currentPage":$!page.currentPage,"pageSize":$!page.pageSize}'
             data-page-params='{"content":"$!content","type":"$!typestr"}'>
        </div>
        <!--分页器-->
    </section>

</div>


