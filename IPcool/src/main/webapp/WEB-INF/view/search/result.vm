    <!--搜索框-->
    #parse("/common/search.vm")

    <div class="out_side_title">
        <span class="out_side_title_icon icon_rank"></span>

        <h1 class="title">搜索结果</h1>

        <p class="summary">收录文学，影视，人物，机构以及音乐等IP</p>
    </div>

