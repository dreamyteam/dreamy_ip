<header class="ipcool_hearder clearfix">
    <div class="inner">
        <a href="/" class="logo"></a>
        <!--搜索框 用户中心显示-->
        <form class="search_bar_container" action="/search.html">
            <div class="form_search">

                <input type="text" name="content" class="search" placeholder="试试搜索美人鱼">
                <input class="submit" type="submit" value="">

            </div>
        </form>
        <!-- 搜索框 结束 -->
        <!--注册 登录按钮-->
        <!-- <nav>
            <button class="register">注册</button>
            <button class="login">登录</button>
        </nav> -->
        <!--登录后用户id-->
        <div class="user">
            <h2 class="user_name">土豆</h2>

            <div class="user_menu">
                <div class="arrow">
                    <span></span><em></em>
                </div>
                <ul>
                    <li><a href="#">我关注的</a></li>
                    <li><a href="#">历史记录</a></li>
                    <li><a href="#">个人信息</a></li>
                    <li><a href="#">账号设置</a></li>
                    <li><a href="#">修改密码</a></li>
                    <li><a href="#">退出登录</a></li>
                </ul>
            </div>
        </div>
    </div>
</header>
<!--main-->
<div class="container">
    <!--搜索框-->
    #parse("/common/search.vm")
    <!--搜索框 end-->
    <section class="search_count">
        #if ($!{content.length()} > 0)
            <p>找到<span class="count">$!{page.totalNum}</span>个与[<span class="name">$!{content}</span>]相关的内容</p>
        #else
            <p>找到<span class="count">$!{page.totalNum}</span>个结果</p>
        #end
    </section>
    <section class="search_result">
        <!--搜索结果为0时 显示-->
        <!-- <div class="sresult_none clearfix" >
            <h5>"<span class="name">霸道总裁爱上我</span>"可能不具备分析价值或暂未被收录</h5>
            <h6>您可以:</h6>
            <button>提交收录申请</button>
            <h6>或</h6>
            <button class="disabled">购买专属分析服务 | ￥999.00</button>
        </div> -->
        <!--搜索结果-->
        <div class="hidden" id="search-attach">

            <input type="hidden" name="status" value="1">
            <input type="hidden" name="type" value="8">

        </div>

        #foreach($view in $list)
            <div class="sresult_ip clearfix">
                <a href="/index/detail.html?ip=${view.id}"><img src="$!{view.imageUrl}"></a>

                <div class="sresult_content">
                    <h2><a href="/index/detail.html?ip=${view.id}">$!{view.name} </a> <span class="type">出版文学</span>
                    </h2>
                    <h6>作者: $!{view.author}</h6>
                    <ul class="quotient">
                        <li>
                            <h6>开发潜力</h6>
                            <span>$!{view.developIndex}</span>
                        </li>
                        <li>
                            <h6>传播指数</h6>
                            <span>$!{view.propagateIndex}</span>
                        </li>
                        <li>
                            <h6>热度指数</h6>
                            <span>$!{view.hotIndex}</span>
                        </li>
                        <li>
                            <h6>受众口碑</h6>
                            <span>$!{view.reputationIndex}</span>
                        </li>
                    </ul>
                </div>
                <div class="overall">
                    <h6>小说综合评分</h6>
                    <span>$!{view.compositeIndex}99</span>
                </div>
            </div>
        #end
    </section>
    <!--分页器 -->
    <div class="paging" id="paging"
         data-page-attach='{"totalNum":100,"currentPage":2,"pageSize":10,"content":"人"}'>
    </div>

    <!--分页器-->
</div>
