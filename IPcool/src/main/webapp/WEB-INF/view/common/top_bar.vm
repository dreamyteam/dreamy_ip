<!-- 登录注册弹窗 -->
<div class="popup_box sign" id="popup_sign">
    <button class="close"></button>
    <span class="logo"></span>
    <span class="err_msg"></span>

    <div id="signForm">
        <div class="sign_form" id="register_form">
            <div class="sign_container">
                <label class="icon_phone_number"></label>
                <input type="text" name="phone_number" placeholder="手机号码" value=""/>
            </div>
            <div class="sign_container">
                <label class="icon_password"></label>
                <input type="password" name="password" placeholder="密码"/>
            </div>
            <div class="sign_container verify">
                <label class="icon_verify"></label>
                <input type="text" name="verify_code" placeholder="验证码"/>
                <button class="btn_send_verify_code" disabled="disabled">发送验证码</button>
            </div>
            <button class="solid">创建帐号</button>
            <p class="tips_bottom">已有帐号?点击
                <button class="tips_bottom_btn">登录</button>
            </p>
        </div>
        <div class="sign_form" id="login_form">
            <div class="sign_container">
                <label class="icon_phone_number"></label>
                <input type="text" name="phone_number" placeholder="手机号码" value=""/>
            </div>
            <div class="sign_container">
                <label class="icon_password"></label>
                <input type="password" name="password" placeholder="密码"/>
            </div>
            <div class="remember_pwd_container">
                <input type="checkbox" name="remenber_pwd" />
                <label class="icon_verify">记住密码</label>
                <a href="#">忘记密码?</a>
            </div>
            <button class="solid">登录</button>
            <p class="tips_bottom">没有帐号?点击
                <button class="tips_bottom_btn">注册</button>
            </p>
        </div>
    </div>
</div>