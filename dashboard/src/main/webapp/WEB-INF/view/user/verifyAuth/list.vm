<div class="page-heading">
    <h3>
        用户管理
    </h3>
    <ul class="breadcrumb">
        <li><a href="#">首页</a></li>
        <li><a href="#">认证审核</a></li>

    </ul>
</div>

<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">

            <ul class="nav nav-tabs">
                <li role="presentation" class="pjax-url #if ($type==1)active#end">
                    <a class="pjax-url" href="/userAuth/verifyList?status=1&type=1">个人</a>
                </li>
                <li role="presentation" class="pjax-url #if ($type==2)active#end">
                    <a class="pjax-url" href="/userAuth/verifyList?status=1&type=2">企业</a>
                </li>
                <li role="presentation" class="pjax-url">
                    <a class="pjax-url" href="/userAuth/businessAuthSchedule">企业认证进程</a>
                </li>
            </ul>

            <section class="panel">
                <div class="panel-body">
                ##                    搜索框
                    <div class="well searchBox">
                        <form id="pagerForm" class="form-inline dt-form dt-datatable-search-form" method="post" action="">
                            <input type="hidden" name="source" value="$!source">

                            <div class="searchContent">

                                <!-- <button type="submit" class="btn btn-default dt-btn-submit">搜索</button> -->
                            </div>
                        </form>
                    </div>


                    <div id="albumListBox" class="adv-table">
                        <table class="display table table-bordered table-striped dt-data-table" id="dynamic-table">
                            <thead>
                            <tr>
                                <th>
                                    <a class="dt-table-select-all">全选</a>
                                </th>
                                <th>ID</th>
                                <th>名称</th>
                                <th>认证时间</th>
                                <th>#if ($type==1) 职业 #else 公司类型 #end</th>
                                <th>申请人手机</th>
                                <th class="hidden-phone">操作</th>
                            </tr>
                            </thead>
                            <tbody>
                                #foreach($userAuth in $list)
                                <tr class="gradeC">
                                    <td class="center dt-checkbox-td">
                                        <input type="checkbox" value="$!{userAuth.id}">
                                    </td>
                                    <td class="center">$!{userAuth.userId}</td>
                                    <td class="center">$!{userAuth.userName}</td>
                                    <td class="center">$!dateUtils.toString(
                                        "yyyy-MM-dd HH:mm:ss",$userAuth.updatedAt)</td>
                                    <td class="center">$!{userAuth.part}</td>
                                    <td class="center">$!{userAuth.phone}</td>
                                    <td class="center hidden-phone">
                                        <a href="/userAuth/view?id=$!{userAuth.id}" class="tablelink">查看</a>
                                        <a href="/userAuth/doVerify?id=$!{userAuth.id}&status=2" class="tablelink"
                                           onclick="return confirm('确定审核通过吗？')">通过</a>
                                        <a href="/userAuth/doVerify?id=$!{userAuth.id}&status=3" class="tablelink"
                                           onclick="return confirm('确定审核不通过吗？')">不通过</a>
                                    </td>
                                </tr>
                                #end
                            </tbody>
                        </table>
                        <div class="dt-page" data-current-page="$!page.currentPage" data-view-page-count="6"
                             data-page-total="$!page.getTotalPage()"></div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>
