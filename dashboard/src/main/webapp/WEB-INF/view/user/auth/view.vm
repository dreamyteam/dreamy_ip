<div class="page-heading">
    <h3>
        用户管理
    </h3>
    <ul class="breadcrumb">
        <li><a href="#">首页</a></li>
        <li><a href="#">用户管理</a></li>
        <li><a href="#">查看认证</a></li>
    </ul>
</div>

<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    认证详情
                    <span class="tools pull-right">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                    <a href="javascript:;" class="fa fa-times"></a>
                 </span>
                </header>
                <div class="panel-body">

                    <form class="form-horizontal dt-form" role="form" action="/crawler/save" method="post">
                        <div class="form-group">
                            <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">申请人姓名</label>
                            <div class="col-lg-4">
                                <span>$!{userAuth.userName}</span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">#if ($userAuth.type==2)公司类型#else 身份 #end</label>
                            <div class="col-lg-4">
                                <p>$!{userAuth.part}</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">申请人身份证</label>
                            <div class="col-lg-4">
                                <p>$!{userAuth.cardNo}</p>
                            </div>
                        </div>
                        #if ($userAuth.type==2)
                            <div class="form-group">
                                <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">企业名称</label>
                                <div class="col-lg-4">
                                    $!{userAuth.companyName}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">开户行</label>
                                <div class="col-lg-4">
                                    $!{userAuth.bankName}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">收款银行户名</label>
                                <div class="col-lg-4">
                                    $!{userAuth.bankRealyName}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">收款银行账号</label>
                                <div class="col-lg-4">
                                    $!{userAuth.bankNo}
                                </div>
                            </div>
                        #end
                        <div class="form-group">
                            <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">邮箱</label>
                            <div class="col-lg-4">
                                $!{userAuth.email}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">电话</label>
                            <div class="col-lg-4">
                                $!{userAuth.phone}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">身份证照片</label>
                            <div class="col-sm-10">
                                <img src="$!{userAuth.cardFront}" style="width:270px;height:120px;" />
                                <img src="$!{userAuth.cardBack}" style="width:270px;height:120px;" />
                            </div>
                        </div>

                        #if ($userAuth.type==2)
                            <div class="form-group">
                                <label class="col-sm-2 control-label">企业执照</label>
                                <div class="col-sm-10">
                                    <img src="$!{userAuth.businessLicense}" style="width:270px;height:120px;" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">授权协议</label>
                                <div class="col-sm-10">
                                    <img src="$!{userAuth.licenseAgreement}" style="width:270px;height:120px;" />
                                </div>
                            </div>
                        #else
                            <div class="form-group">
                                <label class="col-sm-2 control-label">职业证明</label>
                                <div class="col-sm-10">
                                    <img src="$!{userAuth.professionInfo}" style="width:270px;height:120px;" />
                                </div>
                            </div>
                        #end
                        #if($userAuth.status==1 && $userAuth.valideCode=='')
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <a href="/userAuth/doVerify?id=$!{userAuth.id}&status=2" class="tablelink btn btn-primary"
                                       onclick="return confirm('确定审核通过吗？')">通过</a>
                                    <a href="/userAuth/doVerify?id=$!{userAuth.id}&status=3" class="tablelink btn btn-default"
                                       onclick="return confirm('确定审核不通过吗？')">不通过</a>
                                </div>
                            </div>
                        #end

                    </form>

                </div>
            </section>
        </div>
    </div>
</div>

